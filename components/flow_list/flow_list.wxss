/* components/flow_list/flow_list.wxss */
.v-flow_list {
    display: flex;
    flex-direction: row;
    padding: 0 40rpx;
    margin: 24rpx 0;
}

.v-list {
    flex: 1;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.v-item {
    display: flex;
    flex-direction: column;
}

.v-item2 {
    display: flex;
    flex-direction: column;
}
.v-item-img {
    width: 324rpx;
    height: 420rpx;
    border-radius: 12rpx;
    background-color: #ff0099;
}
.v-item-img2 {
    width: 324rpx;
    height: 324rpx;
    border-radius: 12rpx;
    background-color: aqua;
}
.v-item-title {
    color: #232323;
    font-size: 32rpx;
    font-weight: 500;
    font-family: PingFangSC-bold;
    line-height: 44rpx;
    margin-top: 28rpx;
    margin-bottom: 12rpx;
}
.v-item-botm {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 56rpx;
}
.v-item-user {
    color: #999999;
    font-size: 28rpx;
}
.v-img-down {
    width: 24rpx;
    height: 24rpx;
}
.v-img-down-count {
    color: #676767;
    font-size: 28rpx;
}